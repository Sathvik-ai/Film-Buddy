<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
</head>
<body>
    <h1>Admin Dashboard</h1>

    <% posts.forEach(post => { %>
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
        <p>Type: <%= post.type %></p>

        <!-- Render Spotify embed if type is podcast and a Spotify ID exists -->
        <% if (post.type === 'podcast' && post.spotifyEpisodeId) { %>
            <iframe src="https://open.spotify.com/embed/episode/<%= post.spotifyEpisodeId %>"
                    width="300" height="380" frameborder="0" allowtransparency="true" allow="encrypted-media">
            </iframe>
        <% } %>

        <!-- Render YouTube embed if type is course and videoId exists -->
        <% if (post.type === 'course' && post.videoId) { %>
            <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= post.videoId %>"
                    frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
            </iframe>
        <% } %>
    <% }); %>
</body>
</html>
